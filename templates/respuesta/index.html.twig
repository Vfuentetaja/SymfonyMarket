{% extends 'base.html.twig' %}

{% block title %}Respuesta index{% endblock %}

{% block body %}
    <h1>Respuesta index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Texto</th>
                <th>NombreAutor</th>
                <th>Fecha</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for respuestum in respuestas %}
            <tr>
                <td>{{ respuestum.id }}</td>
                <td>{{ respuestum.texto }}</td>
                <td>{{ respuestum.nombreAutor }}</td>
                <td>{{ respuestum.fecha ? respuestum.fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_respuesta_show', {'id': respuestum.id}) }}">show</a>
                    <a href="{{ path('app_respuesta_edit', {'id': respuestum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_respuesta_new') }}">Create new</a>
{% endblock %}
