{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.nombre }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ user.apellidos }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ user.direccion }}</td>
            </tr>
            <tr>
                <th>Fecha_nacimiento</th>
                <td>{{ user.fechaNacimiento ? user.fechaNacimiento|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_user_index') }}">Volver a la lista</a>

    <a class="btn btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">Actualizar</a>
    {{ include('user/_delete_form.html.twig') }}
    
{% endblock %}
