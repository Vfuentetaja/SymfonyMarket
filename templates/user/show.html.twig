
{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <ul id="listaCarrito" class="listaCarrito"></ul>
    <style>
        @media only screen and (max-width: 1023px) {
            .img-fluid {
                display:none;
            }
        }
    </style>


<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-12 col-lg-6">
            <div class="well col-sm-12 d-inline-flex">
                <div class="col-sm-4 col-xs-none">
                    <img class="img-fluid" src="https://png.pngitem.com/pimgs/s/150-1503945_transparent-user-png-default-user-image-png-png.png">
                </div>
                
                <div class="col-sm-8 col-xs-12">
                    <h4>{{ user.nombre }} {{ user.apellidos }}</h4>
                    <p><strong>Nº de usuario: </strong> {{ user.id }} </p>
                    <p class="registro" style="visibility: hidden;">{{ user.id }}</p>
                    <p><strong>Correo: </strong>{{ user.email }}</p>
                    <p><strong>Dirección: </strong>{{ user.direccion }}</p>
                    <p><strong>Fecha de nacimiento: </strong>{{ user.fechaNacimiento ? user.fechaNacimiento|date('Y-m-d') : '' }} </p>
                    <div class="justify-content-center nav-btns button">
                        <a href="{{ path('app_user_index') }}"><button class="btn btn-primary">Volver</button></a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}"><button class="btn btn-warning">Actualizar</button></a>
                        <span>{{ include('user/_delete_form.html.twig') }}</span>
                    </div>
                </div>             
            </div>                    
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12 col-lg-12">
            <div class="well col-sm-12 d-inline-flex">         
                <div id="listadoPreguntas" style='width: 100%;'></div>        
            </div>                    
		</div>
	</div>
</div>
    
    
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="{{ asset('js/preguntasUsuarios.js') }}"></script>
{% endblock %}
