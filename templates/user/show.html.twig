{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <ul id="listaCarrito" class="listaCarrito"></ul>
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td class="registro">{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td class="registro">{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td class="registro">{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td class="registro">{{ user.nombre }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td class="registro">{{ user.apellidos }}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td class="registro">{{ user.direccion }}</td>
            </tr>
            <tr>
                <th>Fecha_nacimiento</th>
                <td class="registro">{{ user.fechaNacimiento ? user.fechaNacimiento|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="contenedor-btn">
        <a class="btn btn-primary" href="{{ path('app_user_index') }}">Volver a la lista</a>
        <a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Actualizar</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
    <h4>Preguntas</h4>
    <div id="listadoPreguntas"></div>
    
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="{{ asset('js/preguntasUsuarios.js') }}"></script>
{% endblock %}
