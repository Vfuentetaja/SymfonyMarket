{% extends 'base.html.twig' %}

{% block title %}Actualizar usuario{% endblock %}

{% block body %}
    <div class="container contenedor">
        <div class="row">
            <div class="col-xs-12">
                <h1>Actualizar usuario</h1>

                {{ include('user/_form.html.twig', {'button_label': 'Actualizar'}) }}

                {% if is_granted('ROLE_ADMIN')%}
                <a class="btn btn-info" href="{{ path('app_user_index') }}">Volver</a>
                {% else %}
                <a class="btn btn-info" href="{{ path('app_producto_index') }}">Volver</a>
                {% endif %}
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>



{% endblock %}
