{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Direccion</th>
                <th>Fecha_nacimiento</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td class="registro">{{ user.id }}</td>
                <td class="registro">{{ user.email }}</td>
                <td class="registro">{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="registro">{{ user.nombre }}</td>
                <td class="registro">{{ user.apellidos }}</td>
                <td class="registro">{{ user.direccion }}</td>
                <td class="registro">{{ user.fechaNacimiento ? user.fechaNacimiento|date('Y-m-d') : '' }}</td>
                <td>
                    <div class="contenedor-btn">
                        <a class="btn btn-primary" href="{{ path('app_user_show', {'id': user.id}) }}">Detalles</a>
                        <a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Actualizar</a>
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    {# <a href="{{ path('app_user_new') }}">Create new</a> #}
{% endblock %}
