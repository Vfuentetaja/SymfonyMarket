{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<section class="bg-light p-5" id="r_lista">
    <h1>User index</h1>
    <div class="table-responsive" id="no-more-tables">
    <table class="table bg-white">
        <thead class="bg-dark text-light">
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Direccion</th>
                <th>Fecha_nacimiento</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td data-title="Id usuario" class="registro">{{ user.id }}</td>
                <td data-title="email usuario" class="registro">{{ user.email }}</td>
                <td data-title="Role usuario" class="registro">{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td data-title="Nombre usuario" class="registro">{{ user.nombre }}</td>
                <td data-title="Apellido usuario" class="registro">{{ user.apellidos }}</td>
                <td data-title="Direccion usuario" class="registro">{{ user.direccion }}</td>
                <td data-title="Fecha nacimiento" class="registro">{{ user.fechaNacimiento ? user.fechaNacimiento|date('Y-m-d') : '' }}</td>
                <td data-title="Botones usuario">
                    <div class="contenedor-btn">
                        <a class="btn btn-primary" href="{{ path('app_user_show', {'id': user.id}) }}">Detalles</a>
                        <a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">Actualizar</a>
                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td data-title="Not found usuario" colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
</section>
    {# <a href="{{ path('app_user_new') }}">Create new</a> #}
{% endblock %}
