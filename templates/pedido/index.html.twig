{% extends 'base.html.twig' %}

{% block title %}Pedido index{% endblock %}

{% block body %}
<section class="bg-light p-5" id="r_lista">
    <h1>Lista de pedidos</h1>
    <div class="table-responsive" id="no-more-tables">
    <table class="table bg-white">
        <thead class="bg-dark text-light">
            <tr>
                <th>Id</th>
                <th>Fecha_pedido</th>
                <th>Id_usuario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td data-title="Id pedido" class="registro">{{ pedido.id }}</td>
                <td data-title="Fecha env" class="registro">{{ pedido.fechaPedido ? pedido.fechaPedido|date('Y-m-d H:i:s') : '' }}</td>
                <td data-title="Id usuario" class="registro">{{ pedido.idUsuario }}</td>
                <td data-title="Botones">
                    <div class="contenedor-btn nav-btns button">
                        <a style="height: 39px" href="{{ path('app_pedido_show', {'id': pedido.id}) }}"><button class="btn btn-primary">Mostrar</button></a>
                        <a style="height: 39px" href="{{ path('app_pedido_edit', {'id': pedido.id}) }}"><button class="btn btn-warning">Actualizar</button></a>
                        {{ include('pedido/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</section>
    {# <a href="{{ path('app_pedido_new') }}">Create new</a> #}
{% endblock %}
