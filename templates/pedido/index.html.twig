{% extends 'base.html.twig' %}

{% block title %}Pedido index{% endblock %}

{% block body %}
    <h1>Pedido index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha_pedido</th>
                <th>Id_usuario</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td class="registro">{{ pedido.id }}</td>
                <td class="registro">{{ pedido.fechaPedido ? pedido.fechaPedido|date('Y-m-d H:i:s') : '' }}</td>
                <td class="registro">{{ pedido.idUsuario }}</td>
                <td>
                    <div class="contenedor-btn">
                        <a class="btn btn-primary" href="{{ path('app_pedido_show', {'id': pedido.id}) }}">Mostrar pedido</a>
                        <a class="btn btn-warning" href="{{ path('app_pedido_edit', {'id': pedido.id}) }}">Actualizar datos de envio</a>
                        {{ include('pedido/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_pedido_new') }}">Create new</a> #}
{% endblock %}
