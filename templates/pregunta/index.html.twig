{% extends 'base.html.twig' %}

{% block title %}Pregunta index{% endblock %}

{% block body %}
    <h1>Pregunta index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NombreAutor</th>
                <th>Texto</th>
                <th>Fecha</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for preguntum in preguntas %}
            <tr>
                <td>{{ preguntum.id }}</td>
                <td>{{ preguntum.nombreAutor }}</td>
                <td>{{ preguntum.texto }}</td>
                <td>{{ preguntum.fecha ? preguntum.fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_pregunta_show', {'id': preguntum.id}) }}">show</a>
                    <a href="{{ path('app_pregunta_edit', {'id': preguntum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pregunta_new') }}">Create new</a>
{% endblock %}
