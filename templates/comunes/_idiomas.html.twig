<div class="idiomas">
	{% for lenguaje, nombre_lenguaje in listado_idiomas %} 
		<form action="{{path('app_idioma',{'_locale': lenguaje})}}" method="POST"> 
			<input type="hidden" name="ruta" value="{{ ruta }}"/>
			<button type="submit" class="btn dropdown-item {{ idioma_actual == lenguaje ? 'active' }}">
			{% if nombre_lenguaje=='es' %}
				<img src="{{ asset('images/' ~ 'ban_es.jpg') }}" class="mini-bandera" alt="es">
			{% else %}
				<img src="{{ asset('images/' ~ 'ban_en.jpg') }}" class="mini-bandera" alt="en">'
			{% endif %}
			</button>
		</form>
	{% endfor%}
</div>

